#list-modal.list-selector
  .modal-header
    button.close(ng-click="$dismiss()")
      span(aria-hidden="true") Ã—
      span.sr-only Close
    h4.modal-title 
      i.fa.fa-plus.fa-lg|  
      |  Choose List
  .modal-body
    tabset(justified="true")
      tab(heading="Choose new lists")
        div.list-selector
          .form-group
            .input-group
              .input-group-addon 
                i.fa.fa-search
              input.form-control(type="text" placeholder="search lists" ng-model="searchLists.label")
          .list-list.scrollable-body
            div(ng-repeat="item in $root.listOptions | filter:searchLists" ng-click="toggleChecked(item, $event)").list-item
              img(ng-src="{{item.screenshot}}").list-image
              h4.list-title {{item.label}}
              i.fa.checkbox(ng-class="{'fa-check': chosenList.indexOf(item) > -1, 'fa-square-o': chosenList.indexOf(item) == -1}")
  .modal-footer
    button.btn.btn-success(type='button' ng-click="chooseList()") Choose
    button.btn.btn-default(type='button' ng-click="$dismiss()") Close
