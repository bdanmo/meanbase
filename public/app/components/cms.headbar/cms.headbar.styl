.autosaving-text
  font-size: 0.8em
  color #95A5A6
.template-screenshot
  position absolute
  max-width 90%
  max-height 80%
  top 50%
  transform translate(-50%, -50%)
  left 50%
  z-index 11

.template-screenshot-backdrop
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  width 100%
  background-color white
  z-index 10

.meanbase-front
  #mb-headbar
    font-size 16px
    background-color: #454851
    top 0
    padding 0 0.5em
    width 100%
    position: fixed
    z-index 11
    font-weight: normal

    .mb-headbar-btn
      display block
      padding 1em
      float left
      padding: 0
      margin: 0.25em
      margin-right 0.3em
      margin-left 0
      border-radius 3px
      cursor pointer

      a
      i
        color white
        font-weight: normal
        text-decoration: none

      .dropdown-link
        display block
        padding 0.5em

      .mb-button
        display block
        padding 0.5em 0.6em

      .mb-link-btn
        display block
        padding 0.5em 0.7em
    // .mb-headbar-btn:after
    //   content '.'
    //   display block
    //   clear both
    //   visibility hidden

    .mb-headbar-btn-right
      float right

      .dropdown-list
        left: auto
        right: 0


    .mb-color-yellow
      background-color #f0ad4e
      color white
      a
        color white

    .mb-color-none
      background-color transparent
      color white
      a
        color white

    .mb-color-grey
      background-color #95A5A6
      color #2C3E50
      a
        color #2C3E50

    .mb-color-green
      background-color #5cb85c
      color white
      a
        color white

    .mb-color-red
      background-color #DB504A
      color white
      a
        color white

    .mb-color-light-blue
      background-color #69A2B0
      color white
      a
        color white

    .mb-color-blue
      background-color #454851
      color white
      a
        color white

    .mb-color-purple
      background-color #9893DA
      color white
      a
        color white

    .dropdown
      position: relative
      box-sizing: border-box
      ul
        margin 0

    .dropdown-list
      display block
      visibility: hidden
      min-width: 170px
      position: absolute
      left: 0
      top: 100%
      padding 0.5em 0
      background-color white
      border-radius: 3px

    .dropdown-list li
      list-style: none
      color #2C3E50
      padding 0.3em 1em
      cursor: pointer

      i
      a
        font-size: 16px
        font-weight: normal
        color #2C3E50
        text-decoration: none
        cursor pointer

      &:not(.divider):hover a
        color white

    .dropdown-list li.divider
      color

    .dropdown-list li:hover
      background-color: #2980B9

    .dropdown-active
      z-index: 100
      visibility: visible

    a
      cursor pointer




